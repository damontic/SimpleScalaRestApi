pipeline {
    
    agent none

    stages {
        stage("Get Latest Version") {
            agent any
            steps {
                git 'git@github.marchex.com:dmontano/SimpleScalaRestApi.git'
                script {
                    sh(script: 'ls', returnStdout: true)
                    sh(script: git tag', returnStdout: true)
                    SSRA_LATEST_TAG = sh (script: 'git tag | tail -n 1', returnStdout: true)
                }
                echo "LATEST_TAG: ${SSRA_LATEST_TAG}"
            }
        }
        stage("Checkout Code") {
            agent {
                docker { image 'alpine/semver' }
            }
            steps {
                script {
                    SSRA_NEXT_ALPHA_TAG = sh (script: 'semver -i prerelease --preid alpha ${SSRA_LATEST_TAG}', returnStdout: true)
                }
                echo "SSRA SSRA_NEXT_ALPHA_TAG: ${SSRA_NEXT_ALPHA_TAG}"
            }
        }
    }
}